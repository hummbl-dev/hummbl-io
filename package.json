{
  "name": "hummbl-mobile",
  "private": true,
  "version": "1.0.0",
  "description": "HUMMBL Mobile App - Mental Models for Better Thinking",
  "scripts": {
    "dev": "pnpm --filter @hummbl/mobile start",
    "build": "pnpm --filter @hummbl/shared build && pnpm --filter @hummbl/mobile export",
    "build:shared": "pnpm --filter @hummbl/shared build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean && rimraf node_modules",
    "format": "prettier --write .",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
