{
  "modelId": "p1",
  "name": "First Principles Framing",
  "version": "1.0.0",
  "description": "Reduces complex problems to foundational truths that cannot be further simplified.",
  "category": "perspective",
  "sla": {
    "timeoutMs": 5000,
    "maxRetries": 3,
    "requiredSuccessRate": 0.95
  },
  "telemetry": {
    "requiredMetrics": ["alignmentScore", "traceFidelity", "entropyDelta"],
    "samplingRate": 1.0
  },
  "ai": {
    "provider": "openai",
    "model": "gpt-4",
    "temperature": 0.7,
    "maxTokens": 2048,
    "fallbackModel": "gpt-3.5-turbo"
  },
  "validation": {
    "minInputLength": 10,
    "maxInputLength": 10000,
    "allowedContentTypes": ["text/plain", "application/json"]
  },
  "security": {
    "requiresAuth": true,
    "allowedRoles": ["user", "admin"],
    "rateLimit": {
      "requests": 100,
      "interval": 3600
    }
  }
}
